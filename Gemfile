# --------------------------------------------------------------
# These dependencies are mandatory!
# All plugins will be used with their latest stable version,
# Then it is important that you have the O.S up to date.
# --------------------------------------------------------------

source 'https://rubygems.org'
ruby RUBY_VERSION

gem 'json'
gem 'rake'
gem 'colorize'
gem 'pygments.rb'
gem 'jekyll'

group :jekyll_plugins do
  gem 'jekyll-feed'
  gem 'jekyll-sitemap'
  gem 'jekyll-coffeescript'
  gem 'jekyll-jsminify'
  gem 'jekyll-gist'
  gem 'jekyll-youtube'
  gem 'jekyll-tagging'
  gem 'jemoji'
  gem 'jektify'
  gem 'jekyll-email-protect'
  gem 'jekyll-paginate-v2'
end

# END
